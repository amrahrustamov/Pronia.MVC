@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <!-- Header Section -->
    <header class="bg-dark text-white p-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>Admin Dashboard</h1>
                </div>
                <div class="col-md-6 text-right">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-danger mx-2">Return Page</a>
                    <a asp-controller="Home" asp-action="Slider" class="btn btn-info mx-2">Edit Slider</a>
                    <a asp-controller="Home" asp-action="ManageProduct" class="btn btn-success mx-2">Manage Products</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Section -->
    @RenderBody()

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
